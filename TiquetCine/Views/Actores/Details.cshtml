
@model Actor

@{
    ViewData["Title"] = "Detalles del Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Detalles de @Model.Nombre</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">


                <div class="form-group text-center">
                    <img id="FotoPreview" class="border-info rounded-circle" style="max-width: 150px" />
                </div>
                <div class="form-group">
                    <label asp-for="Foto" class="control-label"></label>
                    <input asp-for="Foto" class="form-control" readonly />
                    <span asp-validation-for="Foto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" readonly />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Biografia" class="control-label"></label>
                    <input asp-for="Biografia" class="form-control" readonly />
                    <span asp-validation-for="Biografia" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.ActorId">Ir a Editar</a>
                    <a class="btn btn-outline-secondary" asp-action="Index">Mostrar Todos</a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('FotoPreview');
            output.src = $("#Foto").val();
        })

    </script>
}