@model TiquetCine.Models.Pelicula



@{
    ViewData["Title"] = "Detalles de la Pelicula";


}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">

                                @Model.Nombre
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ImageURL" width="100%" alt="@Model.Nombre">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Descripcion</p>
                        <p class="card-text">
                            <b>Cine: </b>
                            <a asp-controller="Cines" asp-action="Details" asp-route-id="@Model.CineId">

                                @Model.Cine.Nombre
                            </a>
                        </p>
                        <p class="card-text">
                            <b>Director: </b>
                            <a asp-controller="Productors" asp-action="Details" asp-route-id="@Model.ProductorId">

                                @Model.Productor.Nombre
                            </a>
                        </p>
                        <p class="card-text"><b>Categoria: </b>@Model.Categoria</p>
                        <p class="card-text"><b>Fecha de Inicio: </b>@Model.FechaInicio.ToString("dd MMM yy")</p>
                        <p class="card-text"><b>Fecha Final: </b>@Model.FechaFinal.ToString("dd MMM yy")</p>
                        <p class="card-text ">
                            <b>Estado: </b>

                            @if (DateTime.Now >= Model.FechaInicio && DateTime.Now <= Model.FechaFinal)
                            {
                                <span class="badge bg-success text-white">
                                    Disponible
                                </span>
                            }
                            else if (DateTime.Now > Model.FechaFinal)
                            {
                                <span class="badge bg-danger text-white">
                                    No Disponible
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-primary text-white">
                                    Proximamente
                                </span>
                            }
                        </p>


                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                Volver
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
